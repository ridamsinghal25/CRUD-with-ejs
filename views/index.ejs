<%- include("layout/header") %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <% if (users.length) { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>S.No</th>
              <th>Id</th>
              <th>Username</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user,index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user._id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.phoneNumber %></td>
              <td>
                <a href="/edit/<%= user._id %>" class="text-success"
                  ><i class="fas fa-edit fa-lg mx-1"></i
                ></a>
                <a href="/delete-user/<%= user._id %>" class="text-danger"
                  ><i class="fas fa-trash fa-lg mx-1"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No Users Found</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
